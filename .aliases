alias k="clear"
alias x="exit"
alias q="exit"
alias :q="exit"
alias ltr="ls -ltr"
alias vi=vim # prefer vim to vi
alias rm=trash # safer deleting using trash-cli
alias dump="empty-trash"
alias please=sudo # nicer sudo
alias resource="source ~/.zshrc"
alias ip="getip" # shorter alias for getip() function in .functions setup
alias bbd="brew bundle dump --force" # homebrew bundle
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ......="cd ../../../../.."
alias c-c="convert-color"

# Git
alias g="git"
alias gmm="git merge master"
alias gf="git fetch --all --prune"
alias gl="git pull"
alias gd="git diff"
alias ga="git add"
alias gp="git push"
alias gpo="git push origin"
alias gbx="git branch -D"
alias gco="git checkout"
alias gbc="git checkout -b"
alias gcm="git checkout master"
alias gpm="git pull origin master"
alias glm="git checkout master && git pull"
alias glmm="pull_and_merge_master"
alias gcam="git commit -am"
alias gcmsg="git commit --message"
alias gs="git status"
alias gba="git branch --all"
alias glg="git log --graph --decorate --pretty=oneline --abbrev-commit --all"
alias gconflicts="git diff --name-only --diff-filter=U"
alias gpub="publish_current_branch"
alias gpull="pull_origin_current_branch"
alias gbam="delete_local_merged_branches"
alias gbamr="delete_remote_merged_branches"
alias gclean="delete_local_merged_branches && delete_remote_merged_branches"
alias go="git open"

# NPM
alias ni="npm install"
alias r="npm run"
alias ya="yarn add"
alias use_npm="npm set registry https://registry.npmjs.org/ && npm get registry"
alias use_wwt="npm set registry https://npm.wwt.com/ && npm get registry"

# Netlify
alias net="netlify"
alias nd="netlify dev"

# start screensaver
alias afk="open -a /System/Library/Frameworks/ScreenSaver.framework/Versions/A/Resources/ScreenSaverEngine.app"

# get current weather
alias weather="curl wttr.in"

# youtube-dl as mp4
alias ytmp4="youtube-dl -f mp4"

# VS Code
alias vsc="code ."
alias co="code ."

#zsh
alias reload="source ~/.zshrc"
